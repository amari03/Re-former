<%= form_with(url: "/users", method: "post") do |form| %>
  <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>

  <div>
    <%= form.label :username, "Username:" %><br>
    <%= form.text_field :username, id: "username", value: "JohnDoe101" %>
  </div>
  <div>
    <%= form.label :email, "Email:" %><br>
    <%= form.text_field :email, id: "email", placeholder: "example@example.com", value: "john@example.com" %>
  </div>
  <div>
    <%= form.label :password, "Password:" %><br>
    <%= form.password_field :password, id: "password", placeholder: "your password" %>
  </div>
  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>


</body>
</html>