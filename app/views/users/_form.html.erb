<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: user, local: true) do |form| %>
  <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>

  <div>
    <%= form.label :username, "Your username here:" %><br>
    <%= form.text_field :username, id: "username" %>
  </div>
  <div>
    <%= form.label :email, "Your email address here:" %><br>
    <%= form.text_field :email, id: "email", placeholder: "example@example.com" %>
  </div>
  <div>
    <%= form.label :password, "Your password here:" %><br>
    <%= form.password_field :password, id: "password" %>
  </div>
  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>